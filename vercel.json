{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "cd client && npm install && npm run build",
          "outputDirectory": "dist"
        }
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      {
        "src": "/api/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/assets/(.*)",
        "dest": "dist/assets/$1"
      },
      {
        "src": "/(.*)",
        "dest": "dist/index.html"
      }
    ]
  }